<div  ng:controller="AuthController">

	<form ng-submit="lostpassword()" class="well form-horizontal span6">
		<fieldset>
			<legend>Recover password:</legend>
			<p>If you have supplied your email for a local account we can send instructions
			to reset your password.</p>
			<div class="control-group">
				<label class="control-label" for="oldpassword">Email:</label>
				<div class="controls">
					<input id="email" ng:model="email" name="email" type="email"
						required="required" autofocus="autofocus" class="input"
						placeholder="Email" />

				</div>
			</div>
		</fieldset>
		<button type="submit" class="btn btn-primary">Reset password</button>
	</form>

</div>