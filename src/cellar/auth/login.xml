<div xmlns:ng="http://angularjs.org">
	<form ng:submit="login()"  class=" form-horizontal">
		<div class="well span6">
			<fieldset>
				<legend>Sign in 
				<small class="pull-right">First time here? <a href="#/auth/register">Register</a></small>
				</legend>
				<div class="control-group">
					<label class="control-label" for="username">User name:</label>
					<div class="controls">
						<input id="username" ng:model="auth.username" type="text"
							class="input" required="required" autofocus="autofocus"
							autoselect="autoselect" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="password">Password:</label>
					<div class="controls">
						<input id="password" ng:model="auth.password" type="password"
							class="input" required="required" autoselect="autoselect" />
						<div>
						<a href="#/auth/lostpassword" >Forgotten your password?</a>	
						</div>    
					</div>
				</div>

				<label class="checkbox">
					<input name="rememberme" type="checkbox" />
					Remember me (not implemented yet)
				</label>

			</fieldset>
			<div class="form-actions">
				<button type="submit"  class="btn btn-primary">Sign in</button>
			
			</div>
			 <div >
			 <label class="control-label">Or use your </label>
			 
                
                <a  class="btn" href="../restxq/cellar/auth/twitter">
                 <i class="icon-twitter"></i> Twitter</a>
                 or
                  <a class="btn" href="../restxq/cellar/auth/github">
                <i class="icon-github"></i> Github</a>
                account.
                 </div>
		</div>
	</form>
	

</div>