<div class="row" data-ng-init="setWindowTitle('Bottles')">
	<h2>Bottle pictures</h2>

	<ul class="thumbnails winelist">
		<li class="span2" data-ng-repeat="bottle in bottles">
			<a href="#" class="thumbnail plain">
				 <img data-ng-src="{{ bottle.name |winePic }}" style="height:125" height="150"  alt=""/>
				 <h5 class="wine-name">{{ bottle.name}}</h5>
				 <div>Usage: {{ bottle.usage }}</div>
			</a>
		</li>
	</ul>
</div>