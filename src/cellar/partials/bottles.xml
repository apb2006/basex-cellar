<div class="row" data-ng-init="setWindowTitle('Bottles')">
	<h2>Bottle pictures</h2>

	<ul class="thumbnails ">
		<li class="span3" data-ng-repeat="bottle in bottles">
		<a href="#" class="thumbnail plain">
		<h5>
		 <span class="label" >{{ bottle.name}}</span>
		 <span class="badge badge-warning" title="Usage">{{ bottle.usage }}</span>
		 </h5>
			
				 <img data-ng-src="{{ bottle.name |winePic }}"  height="150"  alt=""/>
				
			</a>

		</li>
	</ul>
</div>