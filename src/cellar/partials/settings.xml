			<img class="" data-ng-src="{{auth.getAvatar() | userPic}}" />
			<h2>{{auth.getName()}}</h2>

			view: {{view}}
			<ul class="nav nav-list bs-docs-sidenav">
				<li ng-repeat="page in pages">
