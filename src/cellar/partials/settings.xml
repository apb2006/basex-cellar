						{{page.name}}
						<i class="icon-chevron-right"></i>
					</a>
				</li>
				
			</ul>
		</div>
		<div class="span9">
			Profile TBD...
			{{auth.getName()}}
			<ng-include src="src()"></ng-include>
		</div>
	</div>
