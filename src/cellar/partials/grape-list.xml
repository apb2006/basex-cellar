<div class="row-fluid" data-ng-init="setWindowTitle('Grapes')">
   <ul class="breadcrumb">
    <li class="active">Grapes ({{grapes.length}})</li>
    <span class="divider">/</span>
     <a  href="#/grapes/add"><i class="icon-plus-sign"></i>Add New...</a>
    </ul>
	<ul class="media-list winelist">
		<li class="media thumbnail" data-ng-repeat="grape in grapes">
			<a class="pull-left" href="#/grapes/{{ grape.id }}">
				<img class="media-object" src="pics/grapes.png" />
			</a>
			<div class="media-body">
				<h4 class="media-heading">
					<a href="#/grapes/{{ grape.id }}">
						{{ grape.name }}
					</a>
				</h4>
			</div>
		</li>
	</ul>
</div>