<div id="features" class="row" style="padding-left:20px;" data-ng-init="setWindowTitle('Thumbnails')" >

		<div class="navbar clearfix">
		 
		      <form class="navbar-form pull-left">
    Filter:<input type="text" class="span2" data-ng-model="query"/>
	Sort:
    </form>
	
	<ul class="nav " title="Click to sort" style="margin-top:4px">
		 <li data-ng-class="activeCls(th.column)" data-ng-repeat="th in head">
			<a data-ng-click="changeSorting(th.column)"  style="padding: 6px 4px;">
			{{th.head}}
			<i data-ng-class="selectedCls(th.column)"></i>	 
			</a>
		 </li>
	</ul>
 
		</div>

		<ul class=" thumbnails winelist"  >
			<li class="span3" 
			data-ng-repeat="wine in filteredWines = wines | orderBy:sort.column:sort.descending| filter:matchQ">
			<a href="#/wines/{{ wine.id }}" class="thumbnail plain">
			    <img data-ng-src="{{ wine.picture |winePic }}" height="150" width="125" alt=""/>
			    <h5 class="wine-name">{{ wine.name }}</h5>
			    <p>{{ wine.year }} {{ wine.grapes }}<br/>
			    <i class="icon-globe"></i> {{ wine.region }}, {{ wine.country }} </p>
			</a>		
			</li>		
		</ul>

	<!--/span-->
	<span title="Wrong when filtered!">{{filteredWines.length}} of {{wines.length}}</span>
</div>


